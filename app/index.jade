  body(ng-app='glApp')

    // Add site or application content here
    #pt-main.container(ng-controller='AppCtrl', class='pt-perspective {{backFxClass}} {{singleFx}}')
      #status-summary(connectivity, ng-hide='hideStatus')
        internet-status(column=4)
        cloud-status(column=4)
        hardware-status(column=4)
      notification.fullpage(hm-drag-up='swipeUp()')
        div.connectivity(connectivity)
          internet-status(column=4)
          cloud-status(column=4)
          hardware-status(column=4)
      .pt-page.row(ui-view, ng-class='{ uiAlarmToolbar:toolbar, blurPage:showKeypad }', class='{{pageFxClass}}')
      .row
        alarm-toolbar.alarmToolbar.col-xs-12(ng-show='toolbar', ng-class='alarmStatus')

    //[if lt IE 9]><![endif]

    // build:js scripts/vendor.js 
