    script(type='text/ng-template', id='1_login-page')
      .pt-page
        .login-bg

        .row.loginPage
          .logo
            .wrapper
              div.icon-IZCircle(style='font-size:48px; font-weight:bold;')
              div(style='padding:20px 0 0; font-size:14px; line-height:14px; font-weight:bold;') Everything is in good hand
              div(style='font-size:10px;') Reliable home security & automation system.
          .services
            .wrapper
              .authOptions
                .withServices
                  .inputWrap.facebook(hm-tap='signin()')
                    .icon.icon-facebook
                    .input
                      span.text
                        span(translate) Sign in with
                        strong(translate) Facebook
                  .inputWrap.google(hm-tap='signin()')
                    .icon.icon-gplus
                    .input
                      span.text
                        span(translate) Sign in with
                        strong(translate) Google+
                .authDivider
                  .divider.pull-left
                  .or(translate) Or log in with your email
                  .divider.pull-right
                  .clear
                .input
                  input(type='text', placeholder='Username or email address', ng-model='username')
                  input(type='password', placeholder='Password', ng-model='password')
          div.footer
            div.text(translate) Don't have an account yet?
            div.button(translate) Sign up

    script(type='text/ng-template', id='2_menu-page-s')
      .pt-page.mainmenu
        .menu-logo.text-center(style='margin:50px 0 20px;')
          span.icon-IZCircle(style='font-size:56px;')
        ul.mainmenu
          li(hm-tap="goState($index)", ng-repeat='item in items', translate) {{ item | isLink }}
    
    script(type='text/ng-template', id='3_dashboard')
      .pt-page.ui-pageIcon.lgRow(ng-class='alarmStatus')
        .header(page-head, hm-drag-down='swipeDown()')
          icon-title
        div.bodyWrap(page-body)
      input(type='number', ng-model='zones', value='2')
      button(ng-click='updateZones()') Update

    script(type='text/ng-template', id='4_alarm-page')
      .pt-page.ui-pageIcon.ui-tabs(ng-class='alarmStatus')
        .header(page-head, hm-drag-down='swipeDown()')
          icon-title
        div(page-tab)
        div(ui-view, class='bodyWrap {{pageFxClass}}', hm-drag-left='swipe(1)', hm-drag-right='swipe(2)')
    script(type='text/ng-template', id='4.1_zones-page')
      div(page-body)
    script(type='text/ng-template', id='4.2_system-page')
      div(page-body)
    script(type='text/ng-template', id='4.3_emergency-page')
      div(page-body)
    script(type='text/ng-template', id='4.4_logs-page')
      div(page-body)